                    <td>{{ entity.getAngebot().getCode() }}</td>
                    <td>{{ entity.getAngebot().getVeranstaltung().getVersionsnummer() }}</td>
                    <td>{{ entity.getAngebot().getVeranstaltung().getBeauftragter() }}</td>
                    <td>{{ entity.getAngebot().getVeranstaltung().getAutor() }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
