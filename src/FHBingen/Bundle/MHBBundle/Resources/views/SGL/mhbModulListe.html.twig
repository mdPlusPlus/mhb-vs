                </tr>
            </thead>
            <tbody>
            {% for entity in mhb %}
                <tr>
                    <td><a href="{{ path('modulBearbeiten', {'id': entity.getAngebot.getVeranstaltung().getModulID()}) }}">{{ entity.getAngebot.getVeranstaltung.getName() }}</a></td>
