<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html
        PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    {% macro pdfModul(veranstaltung,angebot,lehrende) %}
        {% set count = 0 %}
        {% for modul in veranstaltung %}
        <div class="modul">
           <p>{{ modul }} ({{ modul.getKuerzel() }})</p>
              <table>
                <thead>
                <tr>
                    <th colspan="7">
                        {{ modul }} ({{ modul.getKuerzel() }})<br/>
                        {{ modul.getNameEN() }}
                    </th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>
                        <div class="key">Kennnummer</div>
                        {{ angebot[count].getCode() }}
                    </td>
                    <td>
                        <div class="key">Arbeitsbelastung</div>
                        {{ modul.getLeistungspunkte()*30 }}h
                    </td>
                    <td>
                        <div class="key">Leistungspunkte</div>
                        {{ modul.getLeistungspunkte() }}
                    </td>
                    <td>
                        <div class="key">Studiensemeseter</div>
                        1+2 Semester!!!
                    </td>
                    <td>
                        <div class="key">Häufigkeit des Angebots</div>
                        {{ modul.getHaeufigkeit()}}
                    </td>
                    <td>
                        <div class="key">Dauer</div>
                        {{ modul.getDauer()}}
                        {% if modul.getDauer() < 3 %}
                            Semester
                        {% else %}
                            Wochen
                        {% endif %}
                    </td>
                    <td>

                    </td>
                </tr>
                <tr>
                    <td>1</td>
                    <td colspan="2">
                        <div class="key">Lehrveranstaltung</div>
                        {{ modul.getLehrveranstaltungen()}}
                    </td>
                    <td>
                        <div class="key">Kontaktzeit Vorlesung</div>
                        {{ modul.getKontaktzeitVL()}}h
                    </td>
                    <td>
                        <div class="key">Kontaktzeit Sonstiege</div>
                        {{ modul.getKontaktzeitSonstige()}}h
                    </td>
                    <td>
                        <div class="key">Selbststudium</div>
                        {{ modul.getSelbststudium()}}h
                    </td>
                    <td>
                        <div class="key">Geplante Gruppengröße</div>
                        {{ modul.getGruppengroesse()}} Studierende
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td colspan="6">
                        <div class="key">Lernergebnisse</div>
                        $text = str_replace(,"<br>",modul.getLernergebnisse());!!!!!!!!!!!
                        {{ modul.getLernergebnisse()}}
                    </td>
                </tr>
                <tr>
                    <td>3</td>
                    <td colspan="6">
                        <div class="key">Inhalte</div>
                        {{ modul.getInhalte()}}
                    </td>
                </tr>
                <tr>
                    <td>4</td>
                    <td colspan="6">
                        <div class="key">Lehrform</div>
                        3 SWS Vorlesung, 2 SWS begleitende Übung!!!
                    </td>
                </tr>
                <tr>
                    <td>5</td>
                    <td colspan="6">
                        <div class="key">Teilnahmevoraussetzungen</div>
                        Formal: keine<br/>
                        Inhaltlich:  {{ modul.getVoraussetzungInh()}}
                    </td>
                </tr>
                <tr>
                    <td>6</td>
                    <td colspan="6">
                        <div class="key">Prüfungsformen</div>
                        {{ modul.getPruefungsformen()}}
                    </td>
                </tr>
                <tr>
                    <td>7</td>
                    <td colspan="6">
                        <div class="key">Voraussetzungen für die Vergabe von Leistungspunkten</div>
                        {{ modul.getVoraussetzungLP()}}
                    </td>
                </tr>
                <tr>
                    <td>8</td>
                    <td colspan="6">
                        <div class="key">Verwendung des Moduls (in anderen Studiengängen)</div>
                        Bachelor Bioinformatik!!!
                    </td>
                </tr>
                <tr>
                    <td>9</td>
                    <td colspan="6">
                        <div class="key">Stellenwert der Note für die Endnote</div>
                        Gewichtung nach Leistungspunkten!!!(Brauchen wir nicht)
                    </td>
                </tr>
                <tr>
                    <td>10</td>
                    <td colspan="6">
                        <div class="key">Modulbeauftragte/r und hauptamtlich Lehrende</div>
                        {{ modul.getBeauftragter()}}
                        {#{{ lehrende.getDozent().__toString()}}#}
                    </td>
                </tr>
                <tr>
                    <td>11</td>
                    <td colspan="6">
                        <div class="key">Sonstige Informationen</div>
                        Sprache: {{ modul.getSprache()}}<br/>
                        Literatur:<br/>
                        {{ modul.getLiteratur()}}
                    </td>
                </tr>
                </tbody>
            </table>
            {% set count = count +1 %}
            {% endfor %}
        </div>
    {% endmacro %}
    <title>Modulhandbuch</title>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/fhbingenmhb/css/modul.css') }}"/>
</head>
<body>
