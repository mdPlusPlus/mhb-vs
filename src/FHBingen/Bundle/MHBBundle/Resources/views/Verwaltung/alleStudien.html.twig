{% extends 'FHBingenMHBBundle::layout.html.twig' %}

{% block content %}
    <script type="text/javascript">
        $(document).ready(function () {
            $("#table").tablesorter();
        });
    </script>
    <h4 style="font-weight: bold">Studiengang√ºbersicht</h4>
    <div class="table-responsive">
        <ul>
            <li><a href="{{'/restricted/sgl/createCourse'}}">Neuen Studiengang anlegen</a></li>
        </ul>

        <table id="table" class="table table-bordered tablesorter">
            <thead>
                <tr>
                    <th style="">Studiengang</th>
                    <th style="">Abschluss</th>
                    <th style="">Studiengangleiter</th>
                </tr>
            </thead>
            <tbody>
            {% for gang in courses %}
                <tr>
                    <td><a href="{{'/restricted/sgl/updateCourse/'~gang.getStudiengangID()}}">{{gang.getTitel()}}</a></td>
                    <td>{{gang.getGrad()}}</td>
                    <td>{{gang.getSgl()}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            {% if type == 'info' %}
                <script type="text/javascript">
                    alert('{{ message|raw }}');
                </script>
            {% endif %}
        {% endfor %}
    {% endfor %}

{% endblock %}