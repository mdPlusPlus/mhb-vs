{% extends 'FHBingenMHBBundle::layout.html.twig' %}

{#bei Date wird immer |date('Y-m-d') benötigt um als String zu casten#}

{% block content %}

    <div class="table-responsive">
        <h3>Modulhandbücher</h3>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Modul</th>
                <th>Kürzel</th>
                <th>Regelsemester</th>
                <th>Version</th>
                <th>Modulverantwortlicher</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in mhb %}
                <tr>
                        <td>{{ entity['Name'] }}</td>
                        <td>{{ entity['Kuerzel'] }}</td>
                        <td>{{ entity['Code'] }}</td>
                        <td>{{ entity['Versionsnummer_Modul'] }}</td>
                        <td>{{ entity['Nachname'] }}</td>

            </tbody>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    </div>
{% endblock %}
