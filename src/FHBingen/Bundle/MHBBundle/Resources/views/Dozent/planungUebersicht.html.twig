{% extends 'FHBingenMHBBundle::layout.html.twig' %}

{% block content %}
    <script type="text/javascript">
        $(document).ready(function () {
            $("#table").tablesorter();
        });
    </script>
    <div class="table-responsive">
        <ul>
            <li><a href="{{ path('planungErstellen') }}">Neue Planung erstellen</a></li>
        </ul>
        <table id="table" class="table table-bordered tablesorter">
            <thead>
                <tr>
                    <th>Modultitel</th>
                    <th>letzte Änderung</th>
                    <th>freigeben</th>
                    <th>löschen</th>
                </tr>
            </thead>
            <tbody>
            {% for planung in planungen %}
                <tr>
                    <td><a href="{{ path('planungBearbeiten', {'id': planung.getModulID()}) }}">{{planung.getName()}}</a></td>
                    <td>{{planung.getErstellungsdatum()|date('d.m.Y')}}</td>
                    <td><a href="{{ path('planungFreigeben', {'id': planung.getModulID()}) }}">freigeben</a></td>
                    <td><a href="{{ path('planungLoeschen', {'id': planung.getModulID()}) }}">löschen</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            {% if type == 'info' %}
                <script type="text/javascript">
                    alert('{{ message|raw }}');
                </script>
            {% endif %}
        {% endfor %}
    {% endfor %}

{% endblock %}