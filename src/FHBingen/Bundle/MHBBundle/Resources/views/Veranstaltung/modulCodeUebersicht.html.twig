{% extends 'FHBingenMHBBundle::layout.html.twig' %}

{#bei Date wird immer |date('Y-m-d') ben√∂tigt um als String zu casten#}

{% block content %}

    <div class="table-responsive">
        <h3>Module mit DUMMY Modulcode</h3>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Modultitel</th>
                <th style="min-width: 130px; width: 12%">Erstelldatum</th>
            </tr>
            </thead>
            <tbody>
            {% for dummy in dummyAngebote %}
                <tr>
                    <td><a href="{{'/restricted/sgl/modulCodeErstellung/'~dummy.getVeranstaltung().getModulID()}}">{{dummy.getVeranstaltung()}}</a></td>
                   <td>{{dummy.getVeranstaltung().getErstellungsdatum()|date('d.m.Y')}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

       <h3 style="margin-top: 50px">Module mit Modulcode</h3>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Modultitel</th>
                <th style="min-width: 130px; width: 12%">Erstelldatum</th>
            </tr>
            </thead>
            <tbody>
            {% for normal in angebote %}
                <tr>
                    <td><a href="{{'/restricted/sgl/modulCodeErstellung/'~normal.getVeranstaltung().getModulID()}}">{{ normal.getVeranstaltung() }}</a></td>
                   <td>{{ normal.getVeranstaltung().getErstellungsdatum()|date('d.m.Y') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            {%if type == 'info'%}
                <script>
                    alert('{{ message|raw }}');
                </script>
            {%endif%}
        {% endfor %}
    {% endfor %}


{% endblock %}