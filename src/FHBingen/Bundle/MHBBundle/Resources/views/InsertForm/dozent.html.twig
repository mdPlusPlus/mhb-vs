{% extends "::base.html.twig" %}

{# TODO: löschen, wenn InsertFormController gelöscht wurde #}

{% form_theme form _self %}
{# form_row.html.twig #}
{% block form_row %}
    <tr class="form_row">
        <td>{{ form_label(form) }}</td>
        <td>{{ form_widget(form) }}</td>
        <td>{{ form_errors(form) }}</td>
    </tr>
{% endblock form_row %}

{% block body %}
    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
    <table>
        {{ form_row(form.anrede) }}
        {{ form_row(form.titel) }}
        {{ form_row(form.name) }}
        {{ form_row(form.nachname) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}
        {{ form_row(form.roles) }}
    </table>
    {{ form_end(form) }}

{% endblock %}