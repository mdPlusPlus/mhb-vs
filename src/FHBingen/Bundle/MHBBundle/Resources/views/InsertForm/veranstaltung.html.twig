{% block title %}Formulartest{% endblock %}

{% block body %}
    <h1>Hier soll ein Veranstaltung-Formular zu sehen sein</h1>

    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
        {{ form_row(form.erstellt_von) }}
        {{ form_row(form.Status) }}
        {{ form_row(form.Kuerzel) }}
        {{ form_row(form.Name) }}
        {{ form_row(form.Name_en) }}
        {{ form_row(form.Haeufigkeit) }}
        {{ form_row(form.Dauer) }}
        {{ form_row(form.Lehrveranstaltungen) }}
        {{ form_row(form.Kontaktzeit_VL) }}
        {{ form_row(form.Kontaktzeit_sonstige) }}
        {{ form_row(form.Selbststudium) }}
        {{ form_row(form.Gruppengroesse) }}
        {{ form_row(form.Lernergebnisse) }}
        {{ form_row(form.Inhalte) }}
        {{ form_row(form.Pruefungsformen) }}
        {{ form_row(form.Sprache) }}
        {{ form_row(form.Literatur) }}
        {{ form_row(form.Leistungspunkte) }}
        {{ form_row(form.Voraussetzung_LP) }}
        {{ form_row(form.Voraussetzung_inh) }}
        {{ form_row(form.beauftragter) }}
    {{ form_end(form) }}

{% endblock %}